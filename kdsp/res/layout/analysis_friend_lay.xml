<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/title_has_back_btn" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="300" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="370"
            android:gravity="center"
            android:orientation="vertical">
            <!--五行-->
            <TextView
                android:id="@+id/elements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray3"
                android:textSize="18sp" />

            <!--星宿-->
            <TextView
                android:id="@+id/star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="@color/gray3"
                android:textSize="18sp" />

            <!--喜用神-->
            <TextView
                android:id="@+id/xi_god"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="@color/gray3"
                android:textSize="18sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="664">

            <ImageView
                android:id="@+id/star_lay"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/star_analysis" />

            <TextView
                android:id="@+id/life"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_marginLeft="83dp"
                android:layout_marginTop="125dp"
                android:background="@drawable/life_analysis" />

            <TextView
                android:id="@+id/lifetime"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="83dp"
                android:layout_marginTop="125dp"
                android:background="@drawable/lifetime_analysis" />

            <ImageView
                android:id="@+id/shadow"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/shadow_analysis" />

        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/elements_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/star_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>
