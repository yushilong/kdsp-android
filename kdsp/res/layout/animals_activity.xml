<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"

              android:orientation="vertical">

    <include layout="@layout/title_has_back_share_btn"/>

    <ScrollView
        android:id="@+id/content_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:overScrollMode="never"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/normal_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="50dp"
                    android:background="@color/gray57">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="1dp">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="35dp"
                            android:background="@color/white"
                            android:gravity="center"
                            android:text="@string/animals"
                            android:textColor="@color/gray3"
                            android:textSize="@dimen/text_size_13"/>

                        <TextView
                            android:id="@+id/animals_tv"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="1dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:textColor="@color/gray3"
                            android:textSize="@dimen/text_size_13"/>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="1dp"
                        android:minHeight="55dp">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:gravity="center"
                            android:text="@string/key_word"
                            android:textColor="@color/gray3"
                            android:textSize="@dimen/text_size_13"/>

                        <TextView
                            android:id="@+id/key_word_tv"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:lineSpacingExtra="10dp"
                            android:paddingBottom="10dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:paddingTop="10dp"
                            android:textColor="@color/gray3"
                            android:textSize="@dimen/text_size_13"/>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="1dp"
                        android:minHeight="55dp">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:gravity="center"
                            android:text="@string/too_old_location"
                            android:textColor="@color/gray3"
                            android:textSize="@dimen/text_size_13"/>

                        <TextView
                            android:id="@+id/too_old_location_tv"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:lineSpacingExtra="10dp"
                            android:paddingBottom="10dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:paddingTop="10dp"
                            android:textColor="@color/gray3"
                            android:textSize="@dimen/text_size_13"/>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="1dp"
                        android:minHeight="75dp">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="match_parent"

                            android:background="@color/white"
                            android:gravity="center"
                            android:text="@string/luck_stars"
                            android:textColor="@color/gray3"
                            android:textSize="@dimen/text_size_13"/>

                        <TextView
                            android:id="@+id/luck_stars_tv"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:lineSpacingExtra="10dp"
                            android:paddingBottom="10dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:paddingTop="10dp"
                            android:textColor="@color/gray3"
                            android:textSize="@dimen/text_size_13"/>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="1dp"
                        android:minHeight="55dp">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:gravity="center"
                            android:text="@string/bad_stars"
                            android:textColor="@color/gray3"
                            android:textSize="@dimen/text_size_13"/>

                        <TextView
                            android:id="@+id/bad_stars_tv"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:lineSpacingExtra="10dp"
                            android:paddingBottom="10dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:paddingTop="10dp"
                            android:textColor="@color/gray3"
                            android:textSize="@dimen/text_size_13"/>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:minHeight="55dp">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:gravity="center"
                            android:text="@string/color_luck"
                            android:textColor="@color/gray3"
                            android:textSize="@dimen/text_size_13"/>

                        <TextView
                            android:id="@+id/color_luck_tv"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:lineSpacingExtra="10dp"
                            android:paddingBottom="10dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"

                            android:paddingTop="10dp"
                            android:textColor="@color/gray3"
                            android:textSize="@dimen/text_size_13"/>
                    </TableRow>

                </TableLayout>

                <LinearLayout
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="32dp"
                    android:background="@color/black2"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/title_total_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="26dp"
                        android:layout_marginRight="26dp"
                        android:layout_marginTop="35dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/content_total_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="26dp"
                        android:layout_marginRight="26dp"
                        android:layout_marginTop="30dp"
                        android:lineSpacingExtra="8dp"
                        android:textColor="@color/gray6"
                        android:textSize="13sp"/>


                    <LinearLayout
                        android:paddingBottom="32dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.qizhu.rili.widget.FitWidthImageView
                            android:id="@+id/content_total_image"
                            android:layout_width="118dp"
                            android:layout_height="120dp"
                            android:layout_marginLeft="26dp"
                            android:background="@drawable/bg"
                            fresco:actualImageScaleType="centerCrop"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <LinearLayout
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="26dp"
                            android:orientation="vertical">

                            <TextView
                                android:textStyle="bold"
                                android:id="@+id/content_total_goods_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="8dp"
                                android:text="dd"
                                android:textColor="@color/black"
                                android:textSize="15sp"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>

                            <TextView
                                android:textStyle="bold"
                                android:id="@+id/content_total_goods_btn"
                                android:layout_width="120dp"
                                android:layout_height="28dp"
                                android:background="@drawable/round_white"
                                android:gravity="center"
                                android:onClick="onViewClicked"
                                android:text="@string/login"
                                android:textColor="@color/black"
                                android:textSize="12sp"/>
                        </LinearLayout>


                    </LinearLayout>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="32dp"
                    android:background="@color/black2"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/title_fortune_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="26dp"
                        android:layout_marginRight="26dp"
                        android:layout_marginTop="35dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/content_fortune_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="26dp"
                        android:layout_marginRight="26dp"
                        android:layout_marginTop="30dp"
                        android:lineSpacingExtra="8dp"
                        android:textColor="@color/gray6"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/title_career_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="26dp"
                        android:layout_marginRight="26dp"
                        android:layout_marginTop="35dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/content_career_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="26dp"
                        android:layout_marginRight="26dp"
                        android:layout_marginTop="30dp"
                        android:lineSpacingExtra="8dp"
                        android:textColor="@color/gray6"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/title_love_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="26dp"
                        android:layout_marginRight="26dp"
                        android:layout_marginTop="35dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/content_love_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="26dp"
                        android:layout_marginRight="26dp"
                        android:layout_marginTop="30dp"
                        android:lineSpacingExtra="8dp"
                        android:textColor="@color/gray6"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/confirm_tv"
                        android:layout_width="120dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="22dp"
                        android:layout_marginTop="50dp"
                        android:background="@drawable/round_white"
                        android:gravity="center"
                        android:text="@string/login"
                        android:textColor="@color/black1"
                        android:textSize="12sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="15dp"
                        android:text="@string/animals_luck_tip"
                        android:textColor="@color/yellow10"
                        android:textSize="12sp"/>

                </LinearLayout>
            </LinearLayout>

            <include
                android:id="@+id/bad_lay"
                layout="@layout/request_bad"/>

        </RelativeLayout>

    </ScrollView>
</LinearLayout>