<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/content_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <View
            android:layout_width="1dp"
            android:layout_height="17dp"
            android:layout_marginLeft="75dp"
            android:background="@color/gray46"/>


        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="31dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/bg_home_white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/ic_time"/>


            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:textColor="@color/gray"
                android:textSize="14sp"/>


        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="8dp"
            android:layout_marginLeft="75dp"
            android:background="@color/gray46"/>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"

            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/event_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="17dp"
                android:src="@drawable/ic_wake_up"/>

            <TextView
                android:id="@+id/event_content_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:lineSpacingMultiplier="1.5"
                android:textColor="@color/gray45"
                android:textSize="14sp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/close_llayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="1dp"
            android:layout_height="17dp"
            android:layout_marginLeft="35dp"
            android:background="@color/gray"/>


        <TextView
            android:id="@+id/close_tv"
            android:layout_width="65dp"
            android:layout_height="31dp"
            android:background="@drawable/bg_home_white"
            android:gravity="center"
            android:text="收起"
            android:textColor="@color/gray"
            android:textSize="14sp"/>


    </LinearLayout>


</LinearLayout>
