<?xml version="1.0" encoding="utf-8"?><!-- 头部 start-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/header_height"
              android:orientation="vertical"
              >

    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="160dp"
        android:layout_height="35dp">

        <TextView
            android:id="@+id/previous_life_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/round_brown_left"
            android:gravity="center"
            android:text="@string/previous_life"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/this_life_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/round_white_right"
            android:gravity="center"
            android:text="@string/this_life"
            android:textColor="@color/black"
            android:textSize="16sp"/>
    </LinearLayout>
</LinearLayout>