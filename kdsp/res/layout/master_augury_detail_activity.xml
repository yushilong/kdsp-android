<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_has_back_more_btn" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:padding="5dp"
            android:text="1990.10.20   å¥³"
            android:background="@color/pink6"
            android:id="@+id/item_name"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:paddingTop="10dp"
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="10dp"
            android:textColor="@color/gray3"
            android:textSize="14sp" />


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="45dp"
        android:id="@+id/play_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/voice_doll"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:src="@drawable/master_avatar_circle_lttile" />

        <ImageView
            android:id="@+id/voice_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@drawable/voice3" />
    </LinearLayout>
</LinearLayout>