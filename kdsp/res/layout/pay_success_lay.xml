<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:background="@color/purple1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="72dp"
            android:layout_height="84dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/pay_success_tip" />

        <TextView
            android:id="@+id/has_payed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="@string/has_payed"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pay_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/has_payed"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/image"
            android:text="@string/reply_tip"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/view_order"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:layout_below="@id/pay_tip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_gray9_white"
            android:gravity="center"
            android:text="@string/view_orders"
            android:textColor="@color/gray3"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/guess_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="25dp"
            android:layout_weight="1"
            android:background="@color/gray28" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/guess_like" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/guess_you_like"
            android:textColor="@color/gray6"
            android:textSize="13sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@color/gray28" />

    </LinearLayout>

</LinearLayout>