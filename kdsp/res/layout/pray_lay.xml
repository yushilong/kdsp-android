<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/title_has_back_btn" />

        <ImageView
            android:id="@+id/right_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:scaleType="center"
            android:src="@drawable/pray_record" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pray_love"
                android:layout_width="122dp"
                android:layout_height="175dp"
                android:layout_marginRight="50dp"
                android:src="@drawable/pray_love" />

            <ImageView
                android:id="@+id/pray_wealth"
                android:layout_width="122dp"
                android:layout_height="175dp"
                android:src="@drawable/pray_wealth" />
        </LinearLayout>

        <ImageView
            android:id="@+id/pray_career"
            android:layout_width="123dp"
            android:layout_height="175dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:src="@drawable/pray_career" />
    </LinearLayout>

    <ImageView
        android:id="@+id/love_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:src="@drawable/love_tip"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/wealth_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="150dp"
        android:src="@drawable/wealth_tip"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/career_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="380dp"
        android:paddingLeft="150dp"
        android:src="@drawable/career_tip"
        android:visibility="gone" />
</RelativeLayout>
