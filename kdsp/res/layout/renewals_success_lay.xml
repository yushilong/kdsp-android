<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/title_has_back_btn" />

    <LinearLayout
        android:id="@+id/normal_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:background="@color/gray36"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/normal_tip"
            android:layout_width="119dp"
            android:layout_height="173dp"
            android:layout_marginTop="45dp"
            android:src="@drawable/voice_doll" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:src="@drawable/tick_green" />

            <TextView
                android:id="@+id/normal_tip1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充值成功"
                android:textColor="@color/pink5"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/normal_tip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="你已经是会员啦"
            android:textColor="@color/pink5"
            android:visibility="gone"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/normal_tip3"
            android:layout_width="160dp"
            android:layout_height="35dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/round_gray9_white"
            android:gravity="center"
            android:text="查看会员福利"
            android:textColor="@color/purple"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>