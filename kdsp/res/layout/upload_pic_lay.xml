<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_has_back_btn" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:orientation="horizontal">

        <com.qizhu.rili.widget.YSRLDraweeView
            android:id="@+id/left_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            fresco:viewAspectRatio="0.92"
            fresco:placeholderImage="@drawable/order_hands_left" />

        <com.qizhu.rili.widget.YSRLDraweeView
            android:id="@+id/right_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            fresco:viewAspectRatio="0.92"
            fresco:placeholderImage="@drawable/order_hands_right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/left_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/upload_left"
            android:textColor="@color/purple"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/right_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/upload_right"
            android:textColor="@color/purple"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/confirm"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/round_gray38"
        android:gravity="center"
        android:text="@string/confirm"
        android:enabled="false"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>