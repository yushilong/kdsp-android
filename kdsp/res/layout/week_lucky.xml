<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/week_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="我的七天运势播报"
            android:textColor="@color/purple"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/week_tip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="2.1"
            android:textColor="@color/pink3" />

        <TextView
            android:id="@+id/next_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/red_circle"
            android:gravity="center"
            android:text="本月"
            android:textColor="@color/purple" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="我\n的\n周\n须\n知"
            android:textColor="@color/pink3"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/week_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/tip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="周日"
                android:textColor="@color/purple" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="周一"
                android:textColor="@color/purple" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="周二"
                android:textColor="@color/purple" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="周三"
                android:textColor="@color/purple" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="周四"
                android:textColor="@color/purple" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="周五"
                android:textColor="@color/purple" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="周六"
                android:textColor="@color/purple" />
        </LinearLayout>

        <ImageView
            android:id="@+id/v_line"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_above="@id/week_name"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/tip"
            android:background="@drawable/dot_line_v_purple" />

        <ImageView
            android:id="@+id/h_line"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_above="@id/week_name"
            android:layout_toRightOf="@id/v_line"
            android:background="@drawable/dot_line_h_purple" />

        <LinearLayout
            android:id="@+id/week_lucky_lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/h_line"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/v_line"
            android:orientation="horizontal">

            <com.qizhu.rili.widget.WeekLuckyItem
                android:id="@+id/sunday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.qizhu.rili.widget.WeekLuckyItem
                android:id="@+id/monday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.qizhu.rili.widget.WeekLuckyItem
                android:id="@+id/tuesday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.qizhu.rili.widget.WeekLuckyItem
                android:id="@+id/wednesday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.qizhu.rili.widget.WeekLuckyItem
                android:id="@+id/thursday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.qizhu.rili.widget.WeekLuckyItem
                android:id="@+id/friday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.qizhu.rili.widget.WeekLuckyItem
                android:id="@+id/saturday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>